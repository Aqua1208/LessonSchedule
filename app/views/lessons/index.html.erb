<% content_for :title do %>
  <h1>Lessons</h1>
<% end %>

<% content_for :nav do %>
<% end %>

<div id="lessons">
  <table class="table table-striped table-hover">
    <tr>
      <th>#</th>
      <th>講座</th>
      <th>日程</th>
      <th>時刻</th>
      <th>講師</th>
      <th></th>
    </tr>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.id %></td>
        <td><%= lesson.name %></td>
        <% if lesson.time.present? %>
          <td><%= lesson.time.strftime("%m月%d日") %></td>
          <td><%= lesson.time.strftime("%H時%M分") %></td>
        <% else %>
          <td></td>
          <td></td>
        <% end %>
        <td><%= lesson.teacher %></td>
        <td class="flex">
          <% if current_user.admin %>
            <%= button_to "編集", edit_lesson_path(lesson), method: :get, class: "btn bg-teal" %>
          <% end %>
          <%= button_to "詳細", lesson, method: :get, class: "btn bg-teal" %>
        </td>
      </tr>
    <% end %>
  </table>
</div>

<% if current_user.admin %>
  <%= button_to "新規作成", new_lesson_path, method: :get, class: "btn bg-teal" %>
<% end %>