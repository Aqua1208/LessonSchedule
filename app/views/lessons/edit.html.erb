<h1>Editing lesson</h1>

<%= render "form", lesson: @lesson %>

<br>

<div>
  <%= link_to "Show this lesson", @lesson %> |
  <%= link_to "Back to lessons", lessons_path %>

  <%= form_with model: @lesson, method: :delete, data: { confirm: '本当に削除しますか？' } do |f| %>
    <%= f.submit "講座削除", class: 'btn btn-danger', disable_with: 'Submitting...' %>
  <% end %>
</div>
