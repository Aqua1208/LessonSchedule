<%= form_with(model: lesson) do |f| %>
  <div>
    <%= f.label :name, style: "display: block" %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :time, style: "display: block" %>
    <%= f.datetime_field :time %>
  </div>
  <div>
    <%= f.label :teacher_id, style: "display: block" %>
    <%= f.collection_select :teacher_id, Teacher.all, :id, :name, prompt: true %>
  </div>
  <div>
    <%= f.label :category, style: "display: block" %>
    <%= f.text_field :category %>
  </div>
  <div>
    <%= f.label :comment, style: "display: block" %>
    <%= f.text_area :comment %>
  </div>
  <div class="flex">
    <%= f.submit "講座作成", class: "btn btn-success" %>
<% end %>
