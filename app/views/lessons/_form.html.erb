<%= form_with(model: lesson) do |f| %>
  <div>
    <%= f.label :name, style: "display: block" %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :time, style: "display: block" %>
    <%= f.datetime_field :time %>
  </div>
  <div>
    <%= f.label :teacher, style: "display: block" %>
    <%= f.text_field :teacher %>
  </div>
  <div>
    <%= f.label :category, style: "display: block" %>
    <%= f.text_field :category %>
  </div>
  <div>
    <%= f.label :comment, style: "display: block" %>
    <%= f.text_area :comment %>
  </div>
  <div class="flex">
    <%= f.submit class: "btn btn-teal" %>
<% end %>
