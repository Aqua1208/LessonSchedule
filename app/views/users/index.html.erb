<% content_for :title do %>
  <h1>Users</h1>
<% end %>

<% content_for :nav do %>
<% end %>

<%= render "user" %>

<div id="users">
  <table class="table table-striped table-hover">
    <tr>
      <th>#</th>
      <th>利用者名</th>
      <th></th>
    </tr>
    <% controller.users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td class="flex">
          <% session[:change_signin] = user.id %>
          <%= link_to "詳細", user, class: "btn btn-teal" %>
          <%= button_to "サインイン", change_session_path, class: "btn btn-teal" %>
        </td>
      </tr>
    <% end %>
  </table>
</div>

<%= link_to "New user", new_user_path, class: "btn btn-teal" %>
