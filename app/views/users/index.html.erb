<% content_for :title do %>
  <h1>Users</h1>
<% end %>

<% content_for :nav do %>
<% end %>

<%= render "user" %>

<div id="users">
  <table class="table table-striped table-hover">
    <tr>
      <th>#</th>
      <th>利用者名</th>
      <th></th>
    </tr>
    <% user_all.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= link_to user.name, user %></td>
        <td class="flex">
          <% session[:change_signin] = user.id %>
          <%= link_to "ユーザー詳細", user, class: "btn btn-success" %>
        </td>
      </tr>
    <% end %>
  </table>
</div>

<%= link_to "ユーザー新規作成", new_user_path, class: "btn btn-success" %>
