<nav>
  <h1>User / <%= @user.name %></h1>
  <%= button_to "SignOut", signout_path, method: :delete %>
</nav>

<%= flash[:alert] %>

<%= render @user %>

<div>
  <% if @user == current_user || current_user[:admin] == true %>
    <%= link_to "編集", edit_user_path(@user), class: "ui inverted green button" %>
    <%= link_to "削除", @user, class: "ui inverted red button", data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" } %>
  <% end %>

  <%= link_to "講座一覧へもどる", lessons_path %>
</div>

<div>
  <% if current_user == @user || current_user.admin %>
    <% @participants.where(user_id: session[:user_id]).each do |participant| %>
      <%= @lessons.find(participant.lesson_id).name %>
    <% end %>
  <% end %>
</div>
